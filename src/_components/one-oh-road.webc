<script>
  class OneOhRoad extends HTMLElement {
    connectedCallback() {
      this.community();
    }

    community() {
      const events = this.querySelectorAll(".timeline-event");
      // TODO: There are less markers than events...
      const markers = this.querySelectorAll(".m.h");
      let inFocus = 1;

      const animate = () => {
        markers.forEach(w => w.classList.remove("focus"));
        events.forEach(w => w.classList.remove("focus"));

        events[inFocus].classList.add("focus");
        markers[inFocus].classList.add("focus");
        inFocus = inFocus + 1;

        if (inFocus === events.length) {
          inFocus = 0;
        }
      }

      setInterval(animate, 3000);
    }
  }

  customElements.define("one-oh-road", OneOhRoad);
</script>
