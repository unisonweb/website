<script>
  class OneOhRoad extends HTMLElement {
    connectedCallback() {
      this.start();
    }

    start() {
      const speed = 6000;
      const eventHeight = 11.5;
      const gap = 1;

      const events = this.querySelector(".events-group");
      const eventList = this.querySelectorAll(".timeline-event");
      const markers = this.querySelectorAll(".m.h");

      let inFocus = 1;
      const animate = () => {
        markers.forEach(w => w.classList.remove("focus"));
        eventList.forEach(w => w.classList.remove("focus"));

        const event = eventList[inFocus];
        const date = event.dataset.date;
        this.querySelector(`#d-${date}`)?.classList.add("focus");

        event.classList.add("focus");

        events.style.transform = `translateY(-${(eventHeight + gap) * inFocus}rem)`;

        inFocus = inFocus + 1;

        if (inFocus === eventList.length) {
          inFocus = 0;
        }
      }

      setInterval(animate, speed);
    }
  }

  customElements.define("one-oh-road", OneOhRoad);
</script>
